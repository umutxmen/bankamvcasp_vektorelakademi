                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>#</th>
                                    <th>#</th>
                                    <th>MusteriID</th>
                                    <th>BankaID</th>
                                    <th>DigerBankaID</th>
                                    <th>GidenIban</th>
                                    <th>AlanIban</th>
                                    <th>Miktar</th>
                                    <th>İslemTarihi</th>
                                    <th>Aciklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
